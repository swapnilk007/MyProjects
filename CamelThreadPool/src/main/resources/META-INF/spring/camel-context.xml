<!-- Configures the Camel Context -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd        ">
	<camelContext id="camelContext-2fb5dc40-6c93-449f-a543-4afacfc31164"
		xmlns="http://camel.apache.org/schema/spring">

		<threadPoolProfile id="defaultThreadPoolProfile"
			defaultProfile="true" poolSize="10" maxPoolSize="20" maxQueueSize="1000"
			allowCoreThreadTimeOut="false" rejectedPolicy="CallerRuns" />

		<route id="_route1">
			<from id="_from1" uri="file:/home/skumbhar/Fuse/input?noop=true" />
			<multicast executorServiceRef="defaultThreadPoolProfile">
				<to id="_to1" uri="file:/home/skumbhar/Fuse/output" />
				<to id="_to2" uri="file:/home/skumbhar/Fuse/output/new" />
				<to id="_to3" uri="mock:z" />
			</multicast>
		</route>
	</camelContext>
</beans>
